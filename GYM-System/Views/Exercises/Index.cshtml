@model IEnumerable<GYM_System.Models.Exercise>

@{
    ViewData["Title"] = "Exercise Database";
}

<h1>Exercise Database</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Exercise</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>YouTube Link</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" alt="@item.Name" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.YouTubeLink))
                    {
                        <a href="@item.YouTubeLink" target="_blank">Watch Video</a>
                    }
                    else
                    {
                        <span>No Video</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info me-md-1 me-0 mb-1 mb-md-0" title="Edit Exercise"><i class="bi bi-pencil"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete Exercise"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>