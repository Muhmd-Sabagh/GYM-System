<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Google Fonts: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />

    <!-- Bootstrap Icons (for play button etc.) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Select2 CSS -->
    <link href="~/lib/select2/dist/css/select2.min.css" rel="stylesheet" />

    <!-- Select2 Bootstrap Theme -->
    <link href="~/lib/select2/dist/css/select2-bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS (for general app styling) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Render styles -->
    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid p-2">
                <a class="navbar-brand ms-2" asp-area="" asp-controller="Home" asp-action="Index">Yousef EL Sha3rawy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Clients" asp-action="Index">Clients</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="DietPlanMaker" asp-action="Index">Diet Plan Maker</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="WorkoutPlanMaker" asp-action="Index">Workout Plan Maker</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="SavedPlans" asp-action="Index">Saved Plans</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownDatabase" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Database
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownDatabase">
                                <li><a class="dropdown-item" asp-area="" asp-controller="FoodItems" asp-action="Index">Food Items</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Exercises" asp-action="Index">Exercises</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownSettings" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Settings
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownSettings">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Packages" asp-action="Index">Subscription Packages</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Currencies" asp-action="Index">Currencies</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="PaymentAccounts" asp-action="Index">Payment Accounts</a></li>
                            </ul>
                        </li>
                        <li class="nav-item ms-auto me-3">
                            <a class="nav-link text-light" href="#" data-bs-toggle="modal" data-bs-target="#caloriesCalculatorModal">
                                <i class="bi bi-calculator"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-5 py-4">
        <main role="main">
            <partial name="_StatusMessages" /> <!-- New partial for status messages -->
            @RenderBody()
            <partial name ="_CaloriesCalculatorModal" />
        </main>
    </div>


    <footer class="border-top footer text-muted bg-light mt-3 py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                &copy; @DateTime.Now.Year - C. Yousef Shaarawy
            </div>
            <div class="text-end">
                <img src="/Home/QR" alt="QR Code" width="100" height="100" />
                <br />
                <small class="text-muted">
                    <a href="@($"http://{Context.Connection.LocalIpAddress}:5129")" target="_blank">
                        @($"http://{Context.Connection.LocalIpAddress}:5129")
                    </a>
                </small>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <!-- Select2 JS -->
    <script src="~/lib/select2/dist/js/select2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>