@model GYM_System.Models.FoodItem

@{
    ViewData["Title"] = "Add New Food Item";
}

<h1>Add New Food Item</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImagePath" class="control-label">Image (Optional)</label>
                <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Unit" class="control-label"></label>
                <input asp-for="Unit" class="form-control" placeholder="e.g., gram, slice, piece" />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CaloriesPer100Units" class="control-label"></label>
                <input asp-for="CaloriesPer100Units" class="form-control" />
                <span asp-validation-for="CaloriesPer100Units" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProteinPer100Units" class="control-label"></label>
                <input asp-for="ProteinPer100Units" class="form-control" />
                <span asp-validation-for="ProteinPer100Units" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CarbsPer100Units" class="control-label"></label>
                <input asp-for="CarbsPer100Units" class="form-control" />
                <span asp-validation-for="CarbsPer100Units" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FatPer100Units" class="control-label"></label>
                <input asp-for="FatPer100Units" class="form-control" />
                <span asp-validation-for="FatPer100Units" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}