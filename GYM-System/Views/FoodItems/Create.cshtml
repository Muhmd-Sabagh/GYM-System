@model GYM_System.Models.FoodItem

@{
    ViewData["Title"] = "Add New Food Item";
}

<h1 class="mb-4">Add New Food Item</h1>

<div class="card">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0">Food Item Details</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Unit" class="form-label"></label>
                        <input asp-for="Unit" class="form-control" placeholder="e.g., gram, slice, piece" />
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label for="imageFile" class="form-label">Image (Optional)</label>
                        <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CaloriesPer100Units" class="form-label"></label>
                        <input asp-for="CaloriesPer100Units" class="form-control" />
                        <span asp-validation-for="CaloriesPer100Units" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ProteinPer100Units" class="form-label"></label>
                        <input asp-for="ProteinPer100Units" class="form-control" />
                        <span asp-validation-for="ProteinPer100Units" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CarbsPer100Units" class="form-label"></label>
                        <input asp-for="CarbsPer100Units" class="form-control" />
                        <span asp-validation-for="CarbsPer100Units" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="FatPer100Units" class="form-label"></label>
                        <input asp-for="FatPer100Units" class="form-control" />
                        <span asp-validation-for="FatPer100Units" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary me-2" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
