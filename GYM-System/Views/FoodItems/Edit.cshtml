@model GYM_System.Models.FoodItem

@{
    ViewData["Title"] = "Edit Food Item";
}

<h1>Edit Food Item</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImagePath" /> @* Keep existing image path if no new file uploaded *@

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="imageFile" class="control-label">New Image (Optional)</label>
                <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mt-2">
                        <strong>Current Image:</strong><br />
                        <img src="@Model.ImagePath" alt="@Model.Name" style="width: 100px; height: 100px; object-fit: cover; border-radius: 5px;" />
                    </div>
                }
            </div>
            <div class="form-group mb-3">
                <label asp-for="Unit" class="control-label"></label>
                <input asp-for="Unit" class="form-control" />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CaloriesPer100Units" class="control-label"></label>
                <input asp-for="CaloriesPer100Units" class="form-control" />
                <span asp-validation-for="CaloriesPer100Units" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProteinPer100Units" class="control-label"></label>
                <input asp-for="ProteinPer100Units" class="form-control" />
                <span asp-validation-for="ProteinPer100Units" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CarbsPer100Units" class="control-label"></label>
                <input asp-for="CarbsPer100Units" class="form-control" />
                <span asp-validation-for="CarbsPer100Units" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FatPer100Units" class="control-label"></label>
                <input asp-for="FatPer100Units" class="form-control" />
                <span asp-validation-for="FatPer100Units" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}