@model GYM_System.Models.FoodItem

@{
    ViewData["Title"] = "Delete Food Item";
}

<h1>Delete Food Item</h1>

<h3>Are you sure you want to delete this food item?</h3>
<div>
    <h4>Food Item Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Name:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">Image:</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="@Model.Name" style="width: 80px; height: 80px; object-fit: cover; border-radius: 5px;" />
            }
            else
            {
                <span>No Image</span>
            }
        </dd>

        <dt class="col-sm-3">Unit:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Unit)</dd>

        <dt class="col-sm-3">Calories (per 100 units):</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CaloriesPer100Units)</dd>

        <dt class="col-sm-3">Protein (per 100 units):</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProteinPer100Units)</dd>

        <dt class="col-sm-3">Carbs (per 100 units):</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CarbsPer100Units)</dd>

        <dt class="col-sm-3">Fat (per 100 units):</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.FatPer100Units)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>