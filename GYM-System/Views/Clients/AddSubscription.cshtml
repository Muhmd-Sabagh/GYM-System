@model GYM_System.Models.Subscription

@{
    ViewData["Title"] = $"Add Subscription for {ViewBag.ClientName}";
    var packages = ViewBag.Packages as SelectList;
    var currencies = ViewBag.Currencies as SelectList;
    var paymentAccounts = ViewBag.PaymentAccounts as SelectList;
}

<h1 class="mb-4">Add Subscription for @ViewBag.ClientName</h1>

<div class="card">
    <div class="card-header bg-dark">
        <h5 class="mb-0 text-white">Subscription Details</h5>
    </div>
    <div class="card-body">
        <form asp-action="AddSubscription">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="ClientId" value="@ViewBag.ClientId" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="PackageTypeId" class="form-label"></label>
                        <select asp-for="PackageTypeId" class="form-control" asp-items="packages">
                            <option value="">-- Select Package --</option>
                        </select>
                        <span asp-validation-for="PackageTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DurationMonths" class="form-label"></label>
                        <input asp-for="DurationMonths" class="form-control" />
                        <span asp-validation-for="DurationMonths" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CurrencyId" class="form-label"></label>
                        <select asp-for="CurrencyId" class="form-control" asp-items="currencies">
                            <option value="">-- Select Currency --</option>
                        </select>
                        <span asp-validation-for="CurrencyId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="PaymentAccountId" class="form-label"></label>
                        <select asp-for="PaymentAccountId" class="form-control" asp-items="paymentAccounts">
                            <option value="">-- Select Payment Account (Optional) --</option>
                        </select>
                        <span asp-validation-for="PaymentAccountId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label asp-for="RenewalCount" class="form-label"></label>
                        <input asp-for="RenewalCount" class="form-control" value="0" />
                        <span asp-validation-for="RenewalCount" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create Subscription" class="btn btn-primary me-2" />
                <a asp-action="ClientFile" asp-route-id="@ViewBag.ClientId" class="btn btn-secondary">Back to Client Details</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
