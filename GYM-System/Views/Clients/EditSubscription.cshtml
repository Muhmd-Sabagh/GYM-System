@model GYM_System.Models.Subscription

@{
    ViewData["Title"] = $"Edit Subscription for {ViewBag.ClientName}";
    var packages = ViewBag.Packages as SelectList;
    var currencies = ViewBag.Currencies as SelectList;
    var paymentAccounts = ViewBag.PaymentAccounts as SelectList;
}

<h1>Edit Subscription for @ViewBag.ClientName</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="EditSubscription">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ClientId" />

            <div class="form-group mb-3">
                <label asp-for="PackageTypeId" class="control-label"></label>
                <select asp-for="PackageTypeId" class="form-control" asp-items="packages">
                    <option value="">-- Select Package --</option>
                </select>
                <span asp-validation-for="PackageTypeId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DurationMonths" class="control-label"></label>
                <input asp-for="DurationMonths" class="form-control" />
                <span asp-validation-for="DurationMonths" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CurrencyId" class="control-label"></label>
                <select asp-for="CurrencyId" class="form-control" asp-items="currencies">
                    <option value="">-- Select Currency --</option>
                </select>
                <span asp-validation-for="CurrencyId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PaymentAccountId" class="control-label"></label>
                <select asp-for="PaymentAccountId" class="form-control" asp-items="paymentAccounts">
                    <option value="">-- Select Payment Account (Optional) --</option>
                </select>
                <span asp-validation-for="PaymentAccountId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RenewalCount" class="control-label"></label>
                <input asp-for="RenewalCount" class="form-control" />
                <span asp-validation-for="RenewalCount" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ClientFile" asp-route-id="@Model.ClientId">Back to Client Details</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
